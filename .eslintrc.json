{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "standard",
    "prettier",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:react-hooks/recommended"
  ],
  "globals": {
    "JSX": true,
    "React": true
  },
  "plugins": [
    "react",
    "react-hooks",
    "@typescript-eslint"
  ],
  "settings": { 
    "react": {
      "version": "detect"
    }
  }
 }
